@using DiffPlex.DiffBuilder.Model
@model DiffPaneModel

<div class="diffPane">
    <table cellpadding="0" cellspacing="0" class="diffTable">
        @foreach (var diffLine in Model.Lines)
        {        
            <tr>
                <td class="lineNumber">
                    @if (diffLine.Position.HasValue)
                    {
                        @Html.Raw(diffLine.Position.ToString());
                    }
                    else
                    {
                        @Html.Raw("&nbsp;");
                    }
                </td>
                <td class="line @diffLine.Type.ToString()Line">
                    <span class="lineText">
                        @{ Html.RenderPartial("DiffLine", diffLine); } 
                    </span>
                </td>
            </tr>
        }
    </table>
</div>